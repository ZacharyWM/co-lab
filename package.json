{
  "name": "co-lab",
  "version": "1.0.0",
  "description": "A web-based virtual workspace supporting up to 20 concurrent users with spatial audio/video zones",
  "main": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n \"server,client\" -c \"blue,green\" \"bun run dev:server\" \"sleep 2 && bun run dev:client\"",
    "dev:client": "cd client && bun run dev",
    "dev:server": "cd server && bun run dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "cd client && bun run build",
    "build:server": "cd server && bun run build",
    "start": "cd server && bun run start",
    "install:all": "bun install && cd client && bun install && cd ../server && bun install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "webrtc-adapter": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/bun": "latest",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint": "^9.9.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^15.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.1",
    "prettier": "^3.3.3"
  }
}
